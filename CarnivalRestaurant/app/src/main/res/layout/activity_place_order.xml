<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activity.PlaceOrderActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#D4C1F6"
        app:title="               Carnival Restaurant"
        android:id="@+id/toolBar"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/done"
            android:layout_marginTop="80dp"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="350dp"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textQuantity"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textTotal"/>

        <TextView
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#3249CC"
            android:text="Your Order has been placed.."
            android:layout_marginTop="38dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#3249CC"
            android:text="Thank You Visit Again ..!!"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button

        android:backgroundTint="#C62828"
        android:layout_alignParentBottom="true"
        android:layout_width="120dp"
       android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp"
        android:layout_height="45dp"
        android:text="Back"
        android:onClick="back"
        android:id="@+id/btnPlaceOrder"/>
    <Button

        android:backgroundTint="#558B2F"
        android:layout_alignParentBottom="true"
        android:layout_width="120dp"
        android:layout_marginLeft="220dp"
        android:layout_marginBottom="20dp"
        android:layout_height="45dp"
        android:onClick="showBill"
        android:text="View Bill"
        android:id="@+id/billDetails"/>
</RelativeLayout>